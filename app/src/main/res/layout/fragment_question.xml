<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/beige">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/question_image"
            android:layout_width="90dp"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/img_content_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/answer_result"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
             />

        <TextView
            android:id="@+id/answer_result"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:textColor="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/question_image"
            app:layout_constraintBottom_toTopOf="@+id/choices"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <RadioGroup
            android:id="@+id/choices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/answer_result"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

            <RadioButton
                android:id="@+id/choice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/radio_color"
                android:minHeight="48dp"
                android:textSize="32sp"
                android:textColor="@color/gray"
                app:layout_constraintTop_toTopOf="@id/choices"
                app:layout_constraintBottom_toTopOf="@+id/choice2"
            />

            <RadioButton
                android:id="@+id/choice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/radio_color"
                android:minHeight="48dp"
                android:textSize="32sp"
                android:textColor="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/choice1"
                app:layout_constraintBottom_toTopOf="@+id/choice3"
                />

            <RadioButton
                android:id="@+id/choice3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/radio_color"
                android:minHeight="48dp"
                android:textSize="32sp"
                android:textColor="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/choice2"
                app:layout_constraintBottom_toTopOf="@+id/choice4"
                />

            <RadioButton
                android:id="@+id/choice4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:textSize="32sp"
                android:textColor="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/choice3"
                app:layout_constraintBottom_toBottomOf="@+id/choices"
                />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>