<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/beige">

    <data>
        <import type="android.view.View"/>
        <variable
            name="fruit_dvm"
            type="com.nj.jpfruits.FruitDataViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/question_image"
            android:layout_width="200dip"
            android:layout_height="340dip"
            android:scaleType="fitXY"
            android:contentDescription="@string/img_content_name"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
             />

        <TextView
            android:id="@+id/answer_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="32sp"
            android:textColor="@color/gray"
            app:layout_constraintStart_toEndOf="@+id/question_image"
            tools:ignore="MissingConstraints" />

        <RadioGroup
            android:id="@+id/choices"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/answer_result"
            tools:ignore="MissingConstraints">

            <RadioButton
                android:id="@+id/choice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/radio_color"
                android:minHeight="48dp"
                android:textSize="32sp"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <RadioButton
                android:id="@+id/choice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/radio_color"
                android:minHeight="48dp"
                android:textSize="32sp" />

            <RadioButton
                android:id="@+id/choice3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/radio_color"
                android:minHeight="48dp"
                android:textSize="32sp" />

            <RadioButton
                android:id="@+id/choice4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/radio_color"
                android:minHeight="48dp"
                android:textSize="32sp" />

        </RadioGroup>


        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/screen_flow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:constraint_referenced_ids="question_image, answer_result, choices"
            app:flow_horizontalAlign="center"
            app:flow_verticalAlign="bottom"
            app:flow_verticalStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>